<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
</head>
<body>
    <header>
        <%- include('../partials/navbar.ejs') %>
    </header>
    <main>
        <div class='commentUpdate'>
            <% if (error) { %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong><%= error %></strong>   
                </div>
            <% } %>
            <form action="/comments/update/<%= comments._id %>?_method=put" method="post">
                <h1>Update Comment</h1>
                <input type="text" name="comment" value="<%= comments.comment %>" id="comment">   
                <button type="submit" class="editbtn">Edit</button>
                <button class="cancelbtn">cancel</button>
            </form>
            
        </form>      
    </div>
    </main>
    
</body>
</html>

